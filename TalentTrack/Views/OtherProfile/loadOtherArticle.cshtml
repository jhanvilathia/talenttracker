@model IEnumerable<TalentTrack.Models.tblPost>

@{
    ViewBag.Title = "loadOtherArticle";
    Layout = "~/Views/Shared/ShowPostLayout.cshtml";
}


<!-- employer dashboard -->
<div class="jbm-emp-dashboard pad-xs-top-60">
    <div class="container">
        <div class="row margin-bottom-100">
            <!-- right section -->
            <div class="col-md-9 col-sm-12 col-xs-12 pull-right">
                <!--jbp-message-box end-->
                <div class="jbm-canidate-applications">
                    <div class="jbm-cv-box margin-bottom-30">
                        <h4>Article</h4> <br><br>
                        <div>
                            <div class="jbm-cv-drag-box">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="jbm-cv-box margin-bottom-30">
                                            <div class="col-md-9">
                                                <div class="row">
                                                    <div class="jbm-blog-list margin-bottom-80">
                                                        <div class="media">
                                                            <div class="media-left">
                                                                <div class="blog-post-thumb">
                                                                    <img src="~/images/@item.art.imageURL" height="180px" width="200px" class="media-object">
                                                                    <div class="blog-date">
                                                                        <span class="date-sp">
                                                                            24 Dec
                                                                        </span>
                                                                        <span class="blog-cat">Career</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="media-body">
                                                                <h5 class="media-heading margin-bottom-50 padding-top-15">
                                                                    <font color="maroon">
                                                                        @Html.DisplayFor(modelItem => item.postTitle)
                                                                    </font>
                                                                </h5>
                                                                <p class="margin-bottom-40">@item.art.description</p>

                                                            </div>
                                                            <div class="form-group row">
                                                                <div class="col-md-12  padding-top-30" align="right">
                                                                    <font color="maroon">
                                                                        @Html.DisplayFor(modelItem => item.createdDate)
                                                                    </font>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <!--jbm-cv-drag-box end-->
                            </div>
                        </div>
                    </div><!--jbm-cv-box end-->

                </div><!--jbm-canidate-applications end-->
            </div>
            <!-- right section -->
            <!-- Emp sidebar -->
            @foreach (var key in Model)
            {
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="jbm-emp-sidebar padding-bottom-50 padding-top-30">
                        <ul class="jbm-dashboard-links">
                            <li>
                                <a href="@Url.Action("loadOtherProfile", "OtherProfile", new { key.artistId})">Profile Informations</a>
                            </li>
                            <li>
                                <a href="@Url.Action("loadOtherArticle", "OtherProfile", new { key.artistId })" class="active">Article</a>
                            </li>
                            <li>
                                <a href="@Url.Action("loadOtherImage", "OtherProfile", new { key.artistId})">Images</a>
                            </li>
                            <li>
                                <a href="@Url.Action("loadOtherVideo", "OtherProfile", new { key.artistId})">Videos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            <!-- Emp sidebar -->
        </div>
    </div>
</div>
<!-- employer dashboard -->