@model IEnumerable<TalentTrack.Models.tblPost>

@{
    ViewBag.Title = "showArticle";
    Layout = "~/Views/Shared/ShowPostLayout.cshtml";
}

<div class="darkbg">
    <!-- start section title -->
    <div class="jbm-section-title padding-top-100 margin-bottom-80">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <span class="section-tit-line"></span>
                    <h2><span class="fw-400">Latest</span> Articles</h2>
                    <p>Read the latest jobs from our blog and learn more everyday.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- end section title -->
    <div class="sectiob-blog">
        <div class="container">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="blog-news-slider">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="blog-posts-in">
                            <div class="blog-post-thumb">
                                <img src="~/images/@item.art.imageURL" class="img-responsive" />
                            </div>
                            <div class="blog-post-desc">
                                <a href="@Url.Action("articleMoreInfo","Post",new { postid= item.postId} )" class="blog-redmore">
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                                </a>
                                <h5>
                                    <a href="#">@Html.DisplayFor(modelItem=>item.postTitle)</a>
                                </h5>
                                <div class="blog-grid-meta">
                                    <span><font size="2px" color="gray">by</font></span>
                                    <a href="@Url.Action("loadOtherProfile","OtherProfile",new { item.artistId })"><font size="3px">@Html.DisplayFor(modelItem=>item.tblArtist.userName)</font></a>
                                </div>
                                <p>@item.art.description</p>
                            </div>
                        </div>
                    </div>
                </div>

                }
            </div>
            <div class="row margin-top-60 margin-bottom-100">
                <div class="col-xs-12 text-center">
                    <a href="#" class="jbm-loadmore">View More News</a>
                </div>
            </div>
        </div>
    </div>
</div>


