@model TalentTrack.Models.tblRequirement

@{
    ViewBag.Title = "addRequirement";
    Layout = "~/Views/Shared/RecruiterLayout.cshtml";
}

<!-- employer dashboard -->
<div class="jbm-emp-dashboard">
    <div class="container">
        <div class="row margin-bottom-100">

            <!-- right section -->
            <div class="col-md-9 col-sm-12 col-xs-12 pull-right">
                <div class="about-us job-post margin-bottom-30">
                    <h5 class="margin-bottom-50">Job Details</h5>
                    @using (Html.BeginForm("addRequirement", "RecruiterLogin", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" name="title" id="job-title" class="form-control">
                                    <label for="job-title">Job Title*</label>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group jbm-select-2">
                                    @{ 
                                        List<SelectListItem> list = new List<SelectListItem>();
                                        foreach(var item in Model.clist)
                                        {
                                            list.Add(new SelectListItem(){
                                                Value=item.categoryId.ToString(),
                                                Text=item.categoryName
                                            });
                                        }
                                    }

                                    @Html.DropDownListFor(model => model.categoryId, list, "Category",new { @class= "jbm-s-salary jbm-select-hide-search" })

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" name="description" id="desc" class="form-control">
                                    <label for="desc">Brief Description*</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12"></div><br>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input type="text" name="salary" id="sal" class="form-control">
                                    <label for="sal">Expected Salary*</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="jbm-button jbm-button-3">Post new Job</button>
                  }

                </div>
                
            </div>
            <!-- right section -->
            <!-- Emp sidebar -->
            <div class="col-md-3 col-sm-12 col-xs-12">
                <div class="jbm-emp-sidebar padding-bottom-30 padding-top-30">
                    <ul>
                        <li>
                            <a href="@Url.Action("RecruiterProfile", "RecruiterLogin")">Profile Informations</a>
                        </li>
                        <li>
                            <a href="@Url.Action("UpdateRecruiter","RecruiterLogin")">Edit</a>
                        </li>
                        <li>
                            <a href="@Url.Action("addRequirement","RecruiterLogin")" class="active">Post a requirement</a>
                        </li>
                        <li>
                            <a href="@Url.Action("showRequirement","RecruiterLogin")">Requirements</a>
                        </li>
                        <li>
                            <a href="@Url.Action("managePassword","RecruiterLogin")">Change Password!</a>
                        </li>
                        <li>
                        <li>
                            <a href="@Url.Action("logout","RecruiterLogin")">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Emp sidebar -->
        </div>
    </div>
</div>
<!-- employer dashboard -->